@import "../../common/common.wxss";

page {
  background-color: #f5f5f5;
}

.container {
  height: 100%;
}

/* 个人头像昵称 */

.userinfo {
  background: #fff;
  width: 100%;
  height: 400rpx;
  position: relative;
}

.userinfo-avatar {
  border-radius: 50%;
  margin-top: 130rpx;
  display: inline-block;
  overflow: hidden;
  width: 150rpx;
  height: 150rpx;
}

.iser-info-box {
  height: 100rpx;
  text-align: center;
  display: block;
}

.userinfo-nickname {
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 10rpx;
  display: block;
}

.userinfo-item view {
  display: inline-block;
  font-size: 30rpx;
}

/* 订单列表 */

.user-cart-list {
  background-color: #fff;
  width: 100%;
  text-align: center;
  margin-bottom: 10px;
}

.cart-list {
  display: inline-block;
  width: 25%;
  color: #666;
  font-size: 26rpx;
  margin-top: 10px;
  margin-bottom: 10px;
  position: relative;
}

.cart-list image {
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: 0 auto;
  padding-bottom: 5px;
}

/* 列表 */

.userinfo-item {
  width: 100%;
  border-bottom: 1px solid #fbfbfb;
  line-height: 100rpx;
  padding-left: 30px;
  background-color: #fff;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box
}

.userinfo-item .image {
  width: 20px;
  height: 20px;
  margin: 0 5px -4px 0;
}

.userinfo-item-box {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
}

.userinfo-item-box .userinfo-item {
  width: 100%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
  box-sizing: border-box;
  border-bottom: 1px solid #ededed;
  padding-left: 0;
}

.userinfo-item-box .userinfo-item .image {
  width: 56rpx;
  height: 56rpx;
  margin-right: 40rpx;
  vertical-align: middle;
  margin-top:-3rpx
}
.right-img{
  position: absolute;
  width:12rpx;
  height:20rpx;
  top:40rpx;
  right:0
}

.userinfo-item-box .userinfo-item view {
  flex: 1;
  text-align: left;
}

.userinfo-item-box .userinfo-item button {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity: 0;
}
