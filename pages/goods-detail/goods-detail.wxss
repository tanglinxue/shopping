@import "../../common/common.wxss";

page {
  background: #fff;
  height: 100%;
}

.container {
  min-height: 100%;
  padding-bottom: 100rpx;
  box-sizing: border-box;
}

/* 商品信息 */

.goods-info {
  padding: 30rpx;
  padding-bottom: 20rpx;
  width: 100%;
  position: relative;
  border-bottom: 30rpx solid #f5f5f5;
  box-sizing: border-box;
}

.goods-title {
  font-size: 34rpx;
}

.goods-characteristic {
  font-size: 28rpx;
  color: #999;
  margin: 10rpx 0 20rpx;
}

.goods-price {
  color: #b5272d;
  font-size: 40rpx;
}

.goods-originalPrice {
  padding-left: 20rpx;
  color: #999;
  text-decoration: line-through;
}

.piangjia {
  color: #999;
  font-size: 26rpx;
}
