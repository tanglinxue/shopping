@import "../../common/common.wxss";
page{
  background-color: #f5f5f5;
}
.status-box {
  background-color: #fff;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
}

.status-label {
  width: 33.3%;
  height: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #353535;
  box-sizing: border-box;
  position: relative;
}
.status-label.active{
  color: #b5272d;
  border-bottom: 6rpx solid #b5272d;
}

/* 没有商品 */

.no-order {
  width: 100%;
  text-align: center;
  box-sizing: border-box;
  padding-top: 200rpx;
}

.no-order-img {
  width: 220rpx;
  height: 220rpx;
}

.no-order .text {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}
