@import "../../common/common.wxss";

/* 没有商品 */

.noGoods {
	margin-top: 30%;
	text-align: center;
	color: #999;
}

.box-none {
	width: 200rpx;
	height: 200rpx;
	display: block;
	margin: 0 auto;
}

/* 商品 */
.container {
	background-color: #f5f5f5;
	margin-top: 20rpx;
	padding-bottom: 100rpx;
}
.goodsList{
	width: 100%;
	background-color: #fff;
}
.goods-cont{
	padding:30rpx;
	width:100%;
	box-sizing: border-box;
}
.goods-info-left{
	width:230rpx
}
.goods-img{
	width: 160rpx;
	height: 160rpx;
}

.text-box{
	width:440rpx;
}
.text-box .goods-title{
	font-size: 28rpx;
	color: #000;
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
	padding-top:10rpx
}
.text-box  .goods-price{
	font-size: 26rpx;
	color: #b5272d;
}
/* 底部操作 */
.jiesuan-box{
	width: 100%;
	height: 100rpx;
	line-height:100rpx;
	position: fixed;
	bottom: 0;
	left: 0;
	border-bottom: 1px solid #f5f5f5;
	background-color: #fff;
	z-index: 999999;
	box-shadow: 0px -2px 10px rgba(0, 0, 0, 0.1);
	padding-left:30rpx;
	box-sizing: border-box;
}
.goods-icon{
	width:30rpx;
	height:30rpx;
}
.all-selected{
	padding-left:30rpx;
	color:#000
}
.jiesuan-right .total{
	color: #b5272d;
	margin-right:30rpx
}
.to-pay-btn{
	width: 240rpx;
	text-align: center;
	background-color: #b5272d;
	font-size: 32rpx;
	color: #fff;
}