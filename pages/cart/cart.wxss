@import "../../common/common.wxss";

page{
	background-color: #f5f5f5;
	border-top: 1px solid #f5f5f5;

}
/* 顶部按钮 */
.top-edit-btn{
	position: fixed;
	top: 70rpx;
	z-index: 9999999;
	left: 20rpx;
	font-size: 30rpx;
	color: #b5272d;
}
/* 没有商品 */

.noGoods {
	margin-top: 30%;
	text-align: center;
	color: #999;
}

.box-none {
	width: 200rpx;
	height: 200rpx;
	display: block;
	margin: 0 auto;
}

/* 商品 */
.container {
	width:100%;
	margin-top: 20rpx;
	padding-bottom: 100rpx;
}
.goodsList{
	width: 100%;
  overflow: hidden;
	background-color: #fff;
}

/* 底部操作 */
.jiesuan-box{
	width: 100%;
	height: 100rpx;
	line-height:100rpx;
	position: fixed;
	bottom: 0;
	left: 0;
	border-bottom: 1px solid #f5f5f5;
	background-color: #fff;
	z-index: 999999;
	box-shadow: 0px -2px 10px rgba(0, 0, 0, 0.1);
	padding-left:30rpx;
	box-sizing: border-box;
}
.goods-icon{
	width:30rpx;
	height:30rpx;
}
.all-selected{
	padding-left:30rpx;
	color:#000
}
.jiesuan-right .total{
	color: #b5272d;
	margin-right:30rpx
}
.to-pay-btn{
	width: 240rpx;
	text-align: center;
	background-color: #b5272d;
	font-size: 32rpx;
	color: #fff;
}
.to-pay-btn.no-select{
	background-color: #ccc;
}