@import "../../common/common.wxss";

.container {
	height: 100%;
	display: block;
}

.type-container-boxx {
	width: 100%;
	height: 90vh;
	position: fixed;
	top: 10vh;
	left: 0;
	overflow: hidden;
}

.type-container {
	width: 25%;
	height: 100%;
	border-right: 1px solid #f5f5f5;
	background-color: #fff;
	display: inline-block;
	float: left;
	overflow: scroll;
	box-sizing: border-box;
}

.type-box {
	padding: 5px 0;
	height: 70rpx;
	line-height: 70rpx;
}

.type-navbar-item {
	font-size: 28rpx;
	text-align: center;
	border-left: 2px solid #fff;

}

.type-item-on {
	border-left: 2px solid #ab2b2b;
	color: #ab2b2b;
	font-size: 30rpx;

}

.type-box:nth-child(1) {
	margin-top: 20rpx;
}

.type-list {
	width: 75%;
	height: 100%;
	overflow: scroll;
	float: left;
}

.type-menu {
	width: 100%;
	flex-wrap: wrap;
}

.type-level-item {
	width: 33%;
	margin-bottom: 20rpx;
}

.type-level-item image {
	width: 156rpx;
	height: 156rpx;
	border-radius: 8rpx;
	margin-bottom: 10rpx;

}

.type-level-item text {
	height: 40rpx;
	line-height: 40rpx;
	font-size: 26rpx;

}

.top-line {
	width: 100%;
	height: 1px;
	position: fixed;
	top: 0;
	left: 0;
	background-color: #f5f5f5;
	z-index: 99999;
}

.bottom-lin {
	width: 100%;
	height: 1px;
	position: fixed;
	bottom: 0;
	left: 0;
	background-color: #f5f5f5;
	z-index: 99999;
}
