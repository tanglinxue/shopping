
/* 横向 */
.row-center {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center; /*垂直居中*/
}
.row-between {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center; /*垂直居中*/
}
/* 竖向居中 */
.column-center {
    display: flex;
    flex-direction: column;
    align-items: center;
}
