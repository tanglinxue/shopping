<view class="swiper-container">
    <swiper class=" {{border?'swiper_box noRadius':'swiper_box'}}" autoplay="true" interval="6000" duration="800" bindchange="swiperchange" circular="circular">
      <block wx:for="{{banners}}" wx:key="property">
        <swiper-item>
          <image src="{{item.picUrl}}_m" class="slide-image" />
        </swiper-item>
      </block>
    </swiper>
    <view class="dots">
      <block wx:for="{{banners}}" wx:key="property">
        <view class="dot{{index == swiperCurrent ? ' active' : ''}}"></view>
      </block>
    </view>
  </view>
