@import "../../common/common.wxss";
.show-share {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 999999;
  left:0
}
.show-close-share {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999999;
}

.show-share-box {
  width: 70%;
  background-color: #fff;
  height: 400rpx;
  overflow: hidden;
  border-radius: 10rpx;
  z-index: 9999999;
  position: fixed;
  left: 0;
  bottom: 0;
  top: 35%;
  right: 0;
  margin: 0 auto;
}

.show-share-title {
  text-align: center;
  color: #b5272d;
  font-size: 34rpx;
  margin-top: 10%;
}

.show-share-btn-box {
  width: 80%;
  margin: 0 auto;
  margin-top: 15%;
}

.show-share-share {
  display: inline-block;
  width: 50%;
  height: 160rpx;
  position: relative;
}

.show-share-share image {
  width: 46rpx;
  height: 46rpx;
  display: block;
  margin: 0 auto;
  background-color: #b5272d;
  padding: 26rpx;
  border-radius: 50%;
}

.show-share-share text {
  font-size: 28rpx;
  display: block;
  text-align: center;
  color: #b5272d;
  margin-top: 6rpx;
}

.show-share-share .pop-box-btn {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 160rpx;
  opacity: 0;
}

.show-share-code {
  display: inline-block;
  width: 50%;
  height: 160rpx;
  position: relative;
}

.show-share-code image {
  width: 50rpx;
  height: 50rpx;
  display: block;
  margin: 0 auto;
  background-color: #b5272d;
  padding: 24rpx;
  border-radius: 50%;
}

.show-share-code text {
  font-size: 28rpx;
  display: block;
  text-align: center;
  color: #b5272d;
  margin-top: 6rpx;
}