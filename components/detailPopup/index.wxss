@import "../../common/common.wxss";
@import "../../templates/jiajian/index.wxss";

.show-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999999;
}

.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 5;
}

.popup-contents {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  z-index: 6;
}

.pop-goods-info {
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
  position: relative;
  border-bottom: 1px solid #f5f5f5;
}

.pop-img-box {
  width: 120rpx;
  height: 120rpx;
  margin-right: 26rpx;
}

.goods-thumbnail {
  width: 120rpx;
  height: 120rpx;
}

.pop-goods-des {
  flex: 1;
}

.pop-goods-title {
  width: 100%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 26rpx;
  color: #000;
}

.pop-goods-price {
  font-size: 26rpx;
  color: #b5272d;
  margin-top: 20rpx;
}

.pop-goods-close {
  width: 36rpx;
  height: 36rpx;
  background: url("https://cdn.it120.cc/images/weappshop/popup-close.png") no-repeat center center;
  position: absolute;
  background-size: 36rpx auto;
  right: 30rpx;
  top: 30rpx;
}

.buy-num-box {
  padding: 30rpx;
  padding-bottom: 40rpx;
}

.num-label {
  font-size: 26rpx;
  color: #000;
}

.popup-join-btn {
  width: 100%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  font-size: 34rpx;
  color: #fff;
  background-color: #b5272d;
}
.popup-join-btn.black-btn{
	color: #333;
	background:none
}
.popup-join-btn.half-btn{
	width:50%
}
.btn-box{
	box-shadow: 0rpx 15rpx 15rpx 10rpx;
}