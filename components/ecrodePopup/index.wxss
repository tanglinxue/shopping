@import "../../common/common.wxss";
.popup-bg {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  left: 0;
  top: 0;
  z-index: 9999;
}
.ecrode-popup {
  width: 600rpx;
  height: 1080rpx;
  background-size: 100% 100%;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -500rpx;
  margin-left: -300rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.ecrode-text{
	color:#fff;
	margin:30rpx 0;
}
.ecrode-img{
  height: 900rpx;
}
.ecrode-btn {
  width: 480rpx;
  height: 80rpx;
  line-height: 80rpx;
  background:#D6564D;
  color:#fff;
  text-align: center;
}